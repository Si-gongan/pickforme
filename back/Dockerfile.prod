FROM node:20-alpine

# 작업 디렉토리 설정
WORKDIR /app

# 런타임 의존성 설치
RUN apk add --no-cache \
  dumb-init \
  ca-certificates \
  mongodb-tools

# 패키지 파일 복사
COPY package*.json ./

# 의존성 설치
RUN npm install

# 소스 코드 복사
COPY . .

# 빌드 실행
RUN npm run build

# 포트 노출
EXPOSE 3001

# 프로덕션 실행
CMD ["dumb-init", "npm", "start"]